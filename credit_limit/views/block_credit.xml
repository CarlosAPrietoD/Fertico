<odoo>

    <record model="ir.ui.view" id="block_credit_limit">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="partner_credit_limit.view_category_property_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='credit_limit']" position="attributes">
                <attribute name="readonly">True</attribute>
            </xpath>
            <xpath expr="//field[@name='allowed_sale']" position="attributes">
                <attribute name="readonly">True</attribute>
            </xpath>
            <xpath expr="//field[@name='grace_payment_days']" position="attributes">
                <attribute name="readonly">True</attribute>
            </xpath>
        </field>
    </record>


    <record id="enable_credit_limit" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="block_credit_limit" />
        <field name="groups_id" eval="[(6, 0, [ref('block-credit.group_credit_modify')])]"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='credit_limit']" position="replace">
                <field name='credit_limit' readonly="0"/>
            </xpath>
            <xpath expr="//field[@name='allowed_sale']" position="replace">
                <field name='allowed_sale' readonly="0"/>
            </xpath>
            <xpath expr="//field[@name='grace_payment_days']" position="replace">
                <field name='grace_payment_days' readonly="0"/>
            </xpath>
        </field>
    </record>

</odoo>