<odoo>

    <record model="ir.ui.view" id="block_credit_limit">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="wobin_credit_limit.res_partner_credit"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='assign_credit']" position="attributes">
                <attribute name="groups">block-credit.group_credit_modify</attribute>
            </xpath>
            <xpath expr="//button[@name='update_credit']" position="attributes">
                <attribute name="groups">block-credit.group_credit_modify</attribute>
            </xpath>
            <xpath expr="//button[@name='update_limit']" position="attributes">
                <attribute name="groups">block-credit.group_credit_modify</attribute>
            </xpath>
            <xpath expr="//field[@name='grace_payment_days']" position="attributes">
                <attribute name="readonly">True</attribute>
            </xpath>
        </field>
    </record>


    <record id="enable_credit_limit" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="block_credit_limit" />
        <field name="groups_id" eval="[(6, 0, [ref('block-credit.group_credit_modify')])]"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='grace_payment_days']" position="replace">
                <field name='grace_payment_days' readonly="0"/>
            </xpath>
        </field>
    </record>


</odoo>