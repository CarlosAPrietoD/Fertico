<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="cycle_form_view">
            <field name="name">reciba.cycle.form</field>
            <field name="model">reciba.cycle</field>
            <field name="arch" type="xml">
                <form string="Cycle Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>



        <record model="ir.ui.view" id="cycle_tree_view">
            <field name="name">reciba.cycle.tree</field>
            <field name="model">reciba.cycle</field>
            <field name="arch" type="xml">
                <tree string="Cycle Tree">
                    <field name="name"/>
                </tree>
            </field>
        </record>


        <record model="ir.actions.act_window" id="cycle_action">
            <field name="name">Cycles</field>
            <field name="res_model">reciba.cycle</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create the first cycle
                </p>
            </field>
        </record>

        <menuitem id="menu_cycle" name="Cycles" parent="albagro_reciba_customs.menu_reciba" action="cycle_action" sequence="2"/>

    </data>
</odoo>