        <record id="purchase_order_line_reciba" model="ir.ui.view">
            <field name="model">purchase.order.line</field>
            <field name="inherit_id" ref="purchase.purchase_order_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_id']" position="before">
                    <field name="reciba_id"/>
                    <field name="cycle"/>
                    <field name="invoice_status"/>
                </xpath>
                <xpath expr="//field[@name='product_qty']" position="before">
                    <field name="qty_invoice"/>
                </xpath>
            </field>
        </record>


        <record model="ir.actions.act_window" id="order_line_action">
            <field name="name">Purchase order lines</field>
            <field name="res_model">purchase.order.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create the first line
                </p>
            </field>
        </record>

        <menuitem id="menu_order_line" name="Order lines" parent="purchase.menu_procurement_management" action="order_line_action" sequence="20"/>



    </data>
