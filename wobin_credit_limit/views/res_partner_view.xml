<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_partner_property_form" model="ir.ui.view">
    <field name="name">view.partner.property.form</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="product.view_partner_property_form"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='property_product_pricelist']" position="attributes">
            <attribute name="domain">[["company_id","=",company_id]]</attribute>
        </xpath>
    </field>
  </record>

  <record id="view_partner_property_form_payment" model="ir.ui.view">
    <field name="name">view.partner.property.form.payment</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="account.view_partner_property_form"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='property_payment_term_id']" position="attributes">
            <attribute name="domain">[["company_id","=",company_id]]</attribute>
        </xpath>
        <xpath expr="//field[@name='property_supplier_payment_term_id']" position="attributes">
            <attribute name="domain">[["company_id","=",company_id]]</attribute>
        </xpath>
    </field>
  </record>
</odoo>

