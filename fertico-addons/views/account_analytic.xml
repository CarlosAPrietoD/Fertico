<odoo>
    <data>

        <record id="account_analytic_tag_form" model="ir.ui.view">
            <field name="model">account.analytic.tag</field>
            <field name="inherit_id" ref="analytic.account_analytic_tag_form_view"></field>
            <field name="arch" type="xml">
                <form>
                    <sheet position="after">
                        <group>
                            <field name="active_analytic_distribution" groups="fertico-addons.group_analytic_distribution"/>
                        </group>
                        <field name="analytic_distribution_ids" nolabel="1" widget="one2many_list" attrs="{'invisible': [('active_analytic_distribution', '=', False)]}">
                            <tree string="Analytic Distribution" editable="bottom">
                                <field name="account_id"/>
                                <field name="percentage"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="product_analytic_tag_form" model="ir.ui.view">
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"></field>
            <field name="arch" type="xml">
                    <field name="property_account_income_id" position="after">
                        <field name="analytic_tag_ids" widget="many2many_tags"/>
                    </field>
            </field>
        </record>

        <record id="purchase_order_tag" model="ir.ui.view">
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"></field>
            <field name="arch" type="xml">
                    <xpath expr="//tree/field[@name='date_planned']" position="after">
                        <field name="analytic_tag_ids" widget="many2many_tags"/>
                    </xpath>
            </field>
        </record>

    </data>
</odoo>