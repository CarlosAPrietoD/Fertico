<odoo>
    <data>

        <record id="account_analytic_tag_form" model="ir.ui.view">
            <field name="model">account.analytic.tag</field>
            <field name="inherit_id" ref="analytic.account_analytic_tag_form_view"></field>
            <field name="arch" type="xml">
                <form>
                    <sheet position="after">
                        <group>
                            <field name="active_analytic_distribution" groups="fertico-addons.group_analytic_distribution"/>
                        </group>
                        <field name="analytic_distribution_ids" nolabel="1" widget="one2many_list" attrs="{'invisible': [('active_analytic_distribution', '=', False)]}">
                            <tree string="Analytic Distribution" editable="bottom">
                                <field name="account_id"/>
                                <field name="percentage"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="account_analytic_tags_type" model="ir.ui.view">
            <field name="model">account.analytic.tag</field>
            <field name="inherit_id" ref="analytic.account_analytic_tag_form_view"></field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="tag_type"/>
                </xpath>
            </field>
        </record>

        <record id="account_analytic_tags_list" model="ir.ui.view">
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="analytic.view_account_analytic_line_tree"></field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='account_id']" position="after">
                    <field name="tag_ids" widget="many2many_tags"/>
                </xpath>
                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="travel" />
                    <field name="route" />
                    <field name="operator" />
                </xpath>
            </field>
        </record>

        <record id="account_xml_view" model="ir.ui.view">
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"></field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="xml_file"  filename="file_name"/>
                    <field name="file_name" invisible="1"/>
                    <field name="complement" invisible="1"/>
                    <field name="complement_check"/>
                    <field name="complement_file" filename="complement_file_name" attrs="{'invisible': [('complement', '=', False)]}"/>
                    <field name="complement_file_name" invisible="1"/>
                    <field name="complement_done" invisible="1"/>
                    <field name="complement_done_check" attrs="{'invisible': [('complement', '=', False)]}"/>
                </xpath>
                <xpath expr="//button" position="after">
                    <button name="read_xml" string="Read XML" type="object"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>