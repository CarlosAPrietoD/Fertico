<odoo>
    <record id="view_account_receipt_file_field" model="ir.ui.view">
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='cash_rounding_id']" position="after">
                <field name="receipt_payment_use_ids"  attrs="{'required': [('val_payment_term', 'in', ['AL.(PUE) Contado', 'CL.(PUE) Contado', 'LC.(PUE) Contado', 'PI.(PUE) Contado', 'PM.(PUE) Contado'])]}"  widget="many2many_binary"/>
            </xpath>
        </field>
    </record>
</odoo>

