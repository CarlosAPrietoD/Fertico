    <!--New custom layout for PIA & Albagro -->
    <template id="external_layout_inherit" inherit_id="web.external_layout">
        <xpath expr="//t[2]" position="replace">
            <t t-if="docs._name == 'account.invoice'" t-call="custom_layout"><t t-raw="0"/></t>
            <t t-else="docs._name != 'account.invoice' and company.external_report_layout_id" t-call="{{company.external_report_layout_id.key}}"><t t-raw="0"/></t>
        </xpath>
    </template>
    <!--  TICKET 118  -  DEVELOPED BY SEBASTIAN MENDEZ  -  START   -->
</odoo>