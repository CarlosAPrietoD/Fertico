<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--===================================Reporte de comisiones=================================================-->
    <data>
        <template id="report_sale_commission">
            <t t-call="web.html_container">
                <br />
                <br />
                <br />
                <div style="width: 100%;">
                    <table style="width: 100%; text-align: left;">
                        <tr t-foreach="invoices" t-as="invoice">
                            <td style="text-align:center; border: black 1px solid; padding: 5px">
                                <t t-esc="invoice['number']" />
                            </td>
                            <td style="text-align:center; border: black 1px solid; padding: 5px">
                                <t t-esc="invoice['date']" />
                            </td>
                        </tr>
                    </table>
                </div>
            </t>
        </template>

        <!--Reporte-->
        <report id="report_sales_commissions" model="sale.commission" string="Reporte" report_type="qweb-html" name="fertico_reports.report_sale_commission" />

        <!--Ventana de ingreso de datos-->
        <record model="ir.ui.view" id="report_data_sale_commission">
            <field name="name">report_sale_commission</field>
            <field name="model">sale.commission</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="product" />
                        </group>
                        <group>
                            <field name="init_date" />
                            <field name="end_date" />
                        </group>
                    </group>
                    <footer>
                        <button string="Cancel" special="cancel" class="oe_highlight" />
                        <button name="%(fertico_reports.report_sales_commissions)d" string="Submit" type="action" class="oe_highlight" />
                    </footer>
                </form>
            </field>
        </record>

        <!--Accion para la ventana emergente-->
        <act_window id="action_sale_commission" name="Selecciona el intervalo del reporte" res_model="sale.commission" view_mode="form" target="new" multi="True" />

        <!--Menu-->
        <menuitem id="menu_sale_commission" name="Comisiones por venta" parent="sale.menu_sale_report" action="action_sale_commission" />


    </data>


</odoo>
