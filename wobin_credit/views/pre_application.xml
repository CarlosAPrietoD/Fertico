<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <!--================================================ Avio ======================================================-->

        <record model="ir.ui.view" id="form_view_preapplication_avio">
            <field name="name">credit.preapplication.form</field>
            <field name="model">credit.preapplication</field>
            <field name="arch" type="xml">
                <form string="Pre-solicitudes">
                    <header>
                        <button name="lock_credit" type="object" states="draft" string="Bloquear" class="btn-primary" />
                        <field name="state" widget="statusbar" statusbar_visible="draft,locked" />
                    </header>
                    <sheet>
                        <group>
                            <h1>
                                <field name="name" />
                            </h1>
                        </group>
                        <group>
                            <field name="partner_id" attrs="{'readonly':[('state', '=', 'locked')]}"/>
                            <field name="cycle" attrs="{'readonly':[('state', '=', 'locked')]}"/>
                            <field name="crop_type" attrs="{'readonly':[('state', '=', 'locked')]}"/>
                            <field name="crop_method" attrs="{'readonly':[('state', '=', 'locked')]}"/>
                            <field name="hectares" attrs="{'readonly':[('state', '=', 'locked')]}"/>
                            <field name="calculated_amount"/>
                            <field name="requested_amount" attrs="{'readonly':[('state', '=', 'locked')]}"/>
                            <field name="authorized_amount" attrs="{'readonly':[('state', '=', 'locked')]}"/>
                            <field name="insurance" attrs="{'readonly':[('state', '=', 'locked')]}"/>
                            <field name="credit_type_id" attrs="{'readonly':[('state', '=', 'locked')]}"/>
                            <field name="payment_terms" />
                            <field name="date_limit_flag" invisible='1'/>
                            <field name="date_limit" attrs="{'invisible':[('date_limit_flag', '=', False)], 'readonly':[('state', '=', 'locked')]}" />
                            <field name="interest" />
                            <field name="interest_mo" />
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <record id="tree_view_preapplication_avio" model="ir.ui.view">
            <field name="name">credit.preapplication.tree</field>
            <field name="model">credit.preapplication</field>
            <field name="arch" type="xml">
                <tree string="Pre-solicitudes" delete="0" default_order="id desc">
                    <field name="name" />
                    <field name="partner_id" />
                    <field name="crop_type" />
                    <field name="crop_method" />
                    <field name="hectares" />
                    <field name="requested_amount" />
                    <field name="authorized_amount" />
                    <field name="credit_type_id" />
                    <field name="state" />
                </tree>
            </field>
        </record>

        <record id="credit_preapplication_avio" model="ir.actions.act_window">
            <field name="name">Pre-solicitudes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">credit.preapplication</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a pre-appilcation.
                </p>
            </field>
        </record>

        <record id="credit_tree_preapplication_avio_action" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="credit_preapplication_avio" />
            <field name="view_id" ref="tree_view_preapplication_avio" />
            <field name="view_mode">tree</field>
        </record>

        <record id="credit_form_preapplication_avio_action" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="credit_preapplication_avio" />
            <field name="view_id" ref="form_view_preapplication_avio" />
            <field name="view_mode">form</field>
        </record>

        <menuitem id="preapplication_avio_menu" name="Pre-solicitudes" parent="wobin_credit.avio_menu" action="credit_preapplication_avio" sequence="2" />

    </data>


</odoo>
