<odoo>

    <record id="group_credit_responsable" model="res.groups">
        <field name="name">Responsabe</field>
        <field name="comment">Usuario con acceso a todos los apartados del modulo</field>
    </record>

    <record id="group_credit_modify" model="res.groups">
        <field name="name">Modificar límites de crédito</field>
        <field name="comment">Usuario con acceso a modificación de parametros de límites de crédito</field>
    </record>
    
    <record id="preapplication_comp_rule" model="ir.rule">
        <field name="name">Preapplication multi-company</field>
        <field name="model_id" ref="model_credit_preapplication"/>
        <field name="global" eval="True"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>

</odoo>