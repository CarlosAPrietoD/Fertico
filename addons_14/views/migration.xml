<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record model="ir.ui.view" id="form_res_users_migration">
            <field name="name">res.users.form</field>
            <field name="model">res.users</field>
            <field name="arch" type="xml">
                <form string="Pre-aplicaciones">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="tree_res_users_migration" model="ir.ui.view">
            <field name="name">res.users.tree</field>
            <field name="model">res.users</field>
            <field name="arch" type="xml">
                <tree string="Pre-aplicaciones" delete="0" default_order="id desc">
                    <field name="name" />
                </tree>
            </field>
        </record>

        <record id="res_users_migration" model="ir.actions.act_window">
            <field name="name">Pre-aplicaciones</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.users</field>
            <field name="view_type">form</field>
            <field name="domain">[]</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a pre-appilcation.
                </p>
            </field>
        </record>

        <record id="tree_res_users_migration_action" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="res_users_migration" />
            <field name="view_id" ref="tree_res_users_migration" />
            <field name="view_mode">tree</field>
        </record>

        <record id="form_res_users_migration_action" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="res_users_migration" />
            <field name="view_id" ref="form_res_users_migration" />
            <field name="view_mode">form</field>
        </record>

        <menuitem  name="Usuario v14" action="action_res_users" id="menu_res_users_migration" parent="base.menu_users" sequence="0"/>

    </data>

</odoo>
